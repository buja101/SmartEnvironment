  <!-- <block type="textinline"></block> -->
  <block type="varinlines">
        <value name="value">
        <shadow type="textinline">
          <field name="text">1</field>
        </shadow>
      </value>
  </block>
  <block type="df">
    <value name="def">
      <shadow type="textinline">
          <field name="text">function_name</field>
        </shadow>
      </value>
    <value name="params">
      <shadow type="textinline">
          <field name="text"></field>
        </shadow>
      </value>
  </block>
  <block type="pass"></block>

  <block type="printnew">
      <value name="text">
        <shadow type="textinline">
          <field name="text">Hello World</field>
        </shadow>
      </value>
  </block>
  <block type="varprint">
  <value name="var">
        <shadow type="textinline">
          <field name="text">Variable</field>
        </shadow>
      </value>
  </block>

  <label text="Logic" web-class="myLabelStyle"></label>
  <block type="internal">
    <value name="first">
      <shadow type="textinline">
        <field name="text">0</field>
      </shadow>
    </value>
    <value name="last">
      <shadow type="textinline">
        <field name="text">0</field>
      </shadow>
    </value>
  </block>
  <block type="andor">
    <value name="first">
      <shadow type="textinline">
        <field name="text">True</field>
      </shadow>
    </value>
    <value name="last">
      <shadow type="textinline">
        <field name="text">True</field>
      </shadow>
    </value>
  </block>
  <block type="not">
    <value name="bool">
      <shadow type="textinline">
        <field name="text">True</field>
      </shadow>
    </value>
  </block>

  <label text="Loops" web-class="myLabelStyle"></label>

  <block type="whileout">
    <value name="cond">
      <shadow type="textinline">
        <field name="text">True</field>
      </shadow>
    </value>
  </block>
  <block type="for">
    <value name="letter">
      <shadow type="textinline">
        <field name="text">i</field>
      </shadow>
    </value>
    <value name="no">
      <shadow type="textinline">
        <field name="text">number</field>
      </shadow>
    </value>
  </block>
  <block type="advancedforloops">
    <value name="x">
      <shadow type="textinline">
        <field name="text">x</field>
      </shadow>
    </value>
    <value name="y">
      <shadow type="textinline">
        <field name="text">y</field>
      </shadow>
    </value>
  </block>
  <block type="break"></block>
  
  <label text="Conditions" web-class="myLabelStyle"></label>
  <block type="ifinline">
    <value name="iftext">
      <shadow type="textinline">
        <field name="text">True</field>
      </shadow>
    </value>
  </block>
  <block type="elifinline">
    <value name="iftext">
      <shadow type="textinline">
        <field name="text">True</field>
      </shadow>
    </value>
  </block>
  <block type="else"></block>


  <label text="Definitions" web-class="myLabelStyle"></label>
  <block type="define">
    <value name="1">
      <shadow type="textinline">
        <field name="text"></field>
      </shadow>
    </value>
    <value name="2">
      <shadow type="textinline">
        <field name="text"></field>
      </shadow>
    </value>
  </block>
  <block type="return2">
    <value name="return">
      <shadow type="textinline">
        <field name="text"></field>
      </shadow>
    </value>
  </block>
  <block type="class">
    <value name="class">
      <shadow type="textinline">
        <field name="text">classname</field>
      </shadow>
    </value>
  </block>

</category>
