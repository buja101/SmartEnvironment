<category name="Basic" colour="#ff0066">

  <label text="Imports" web-class="myLabelStyle"></label>

  <block type="import_microbit"></block>
  <block type="import_math"></block>
  <block type="random"></block>
  <block type="import_audio"></block>

  <label text="Statements" web-class="myLabelStyle"></label>
  <block type="sleepnew">
      <value name="sleep">
        <shadow type="textinline">
          <field name="text">1000</field>
        </shadow>
      </value>
  </block>
 
  <block type="typeanything">
      <value name="stuff">
        <shadow type="textinline">
          <field name="text">     </field>
        </shadow>
      </value>
  </block>
